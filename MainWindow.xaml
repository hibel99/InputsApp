        Title="MainWindow" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#f0f0f0"
        ResizeMode="NoResize"
        Height="1080"
        Foreground="Black"
        FontSize="16"
        Width="1920"
        FontFamily="Roboto"
