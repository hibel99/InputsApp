<Window x:Class="InputsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InputsApp"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks" xmlns:models="clr-namespace:InputsApp.Models"
        mc:Ignorable="d"
        Title="MainWindow" 
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#f0f0f0"
        ResizeMode="NoResize"
        Height="1080"
        Foreground="Black"
        FontSize="16"
        Width="1920"
        FontFamily="Roboto"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen" >
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <materialDesign:CustomColorTheme x:Name="fav" BaseTheme="Light" PrimaryColor="#FD8207" SecondaryColor="#F0F0F0" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>



    <Grid>
        <Grid Background="#F5F6F8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="800"/>
                <ColumnDefinition Width="400*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="140"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Image Margin="15 0 0 0" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Source="./Image/1.png" />

            <StackPanel Orientation="Horizontal" Grid.Column="2" Grid.Row="0" VerticalAlignment="Top" Height="39" HorizontalAlignment="Right">
                <Button Style="{StaticResource exitButton}" Height="36" Click="MinimizeButton_Click" Width="48">
                    <icon:PackIconMaterial Kind="WindowMinimize" Width="10" Height="10"/>
                </Button>

                <Button Style="{StaticResource exitButton}" Height="36" Click="CloseButton_Click" VerticalAlignment="Center" HorizontalAlignment="Center">
                    <icon:PackIconMaterial Kind="Close" Width="10" Height="10"/>
                </Button>
            </StackPanel>

            <Border Visibility="Visible"  Grid.Column="1" Grid.Row="1" Margin="0 0 10 10" Background="White" CornerRadius="19" >
                <Grid  Name="PivotGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>


                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>

                    </Grid.RowDefinitions>

                    <!--<Grid Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>

                        </Grid.ColumnDefinitions>
                        -->
                    <!--<RadioButton Content="Pivot" Style="{StaticResource ToggleButtonButtonStyle}" IsChecked="True" Name="PivotPartRD" Grid.Column="0" HorizontalAlignment="Center" GroupName="PartsSelectRD"/>
                        <RadioButton Content="Span" Style="{StaticResource ToggleButtonButtonStyle}" Name="SpanPartRD"  Grid.Column="1" HorizontalAlignment="Center" GroupName="PartsSelectRD"/>
                        <RadioButton Content="Spare Part" Style="{StaticResource ToggleButtonButtonStyle}" Name="SparePartRD" Grid.Column="2" HorizontalAlignment="Center" GroupName="PartsSelectRD"/>
                        <RadioButton Content="Set" Style="{StaticResource ToggleButtonButtonStyle}" IsChecked="False"  Name="SetPartRD" Grid.Column="3" HorizontalAlignment="Center" GroupName="PartsSelectRD"/>-->
                    <!--

                    </Grid>-->


                    <TextBlock Text="Category" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Section" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Brand" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Pivot Part Name" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Pivot Part Name Arabic" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <TextBlock Text="Height" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Width" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Length" Grid.Row="7" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Weight" Grid.Row="8" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Cost" Grid.Row="9" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <TextBlock Text="Quantity" Grid.Row="11" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <TextBlock Grid.Row="10" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Add Relation With"/>



                    <Grid Grid.Row="10" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.6*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>




                        <ComboBox Name="RelationTabCB" Grid.Row="12" SelectedIndex="0" Grid.Column="0" Style="{StaticResource MaterialDesignOutlinedComboBox}" SelectionChanged="RelationTabCB_SelectionChanged" Margin="5 0 5 0" materialDesign:HintAssist.Hint="Select" Height="50"  >
                            <ComboBoxItem Content="Pivot"/>
                            <ComboBoxItem Content="Span"/>
                            <ComboBoxItem Content="SparePart"/>
                            <ComboBoxItem Content="Set"/>
                        </ComboBox>


                        <ComboBox Name="PivotNameCB" Padding="10"  DisplayMemberPath="Name" Height="50"   materialDesign:HintAssist.Hint="Connect it with a Pivot" SelectionChanged="PivotNameCB_SelectionChanged" Grid.Column="1" >
                            <ComboBox.Style>
                                <Style TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedIndex, ElementName=RelationTabCB}" Value="0">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>


                        </ComboBox>

                        <ComboBox Name="SpanNameCB" Padding="10"   Height="50"  materialDesign:HintAssist.Hint="Connect it with a Span" SelectionChanged="PivotNameCB_SelectionChanged" Grid.Column="1" ItemsSource="{Binding SpansOBS}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Name}">
                                        <TextBlock.ToolTip>
                                            <ToolTip x:Name="propertyToolTip" Visibility="Collapsed" Placement="Left" Margin="15 0 0 0" Padding="5">
                                                <StackPanel>
                                                    <TextBlock FontWeight="Bold">Span Properties:</TextBlock>
                                               
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>

                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="*"/>
                                                            <RowDefinition Height="*"/>
                                                            <RowDefinition Height="*"/>
                                                            <RowDefinition Height="*"/>



                                                        </Grid.RowDefinitions>
                                                        <TextBlock Grid.Column="0" Text="Length:" />
                                                        <TextBlock Grid.Column="1" Text="{Binding LengthForDG}" />
                                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Diameter:" />
                                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding DiameterForDG}" />
                                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Cost:" />
                                                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CostForDG}" />

                                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Outlets:" />
                                                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Outlets}" />



                                                    </Grid>
                                                </StackPanel>
                                                <ToolTip.DataContext>
                                                    <Binding Path="PlacementTarget.DataContext" RelativeSource="{RelativeSource Self}"/>
                                                </ToolTip.DataContext>
                                                <ToolTip.Triggers>
                                                    <EventTrigger RoutedEvent="ToolTip.Loaded">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetProperty="Width" From="0" To="150" Duration="0:0:0.3"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </ToolTip.Triggers>
                                            </ToolTip>
                                        </TextBlock.ToolTip>
                                        <TextBlock.Triggers>
                                            <EventTrigger RoutedEvent="MouseEnter">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="ToolTip.Visibility">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Visible}" />
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                            <EventTrigger RoutedEvent="MouseLeave">
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="ToolTip.Visibility">
                                                            <DiscreteObjectKeyFrame KeyTime="0" Value="{x:Static Visibility.Collapsed}" />
                                                        </ObjectAnimationUsingKeyFrames>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </EventTrigger>
                                        </TextBlock.Triggers>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                            
                            
                            <ComboBox.Style>
                                <Style TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedIndex, ElementName=RelationTabCB}" Value="1">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>
                           
                        </ComboBox>

                        <ComboBox Name="PartNameCB" Padding="10"  IsTextSearchEnabled="True" DisplayMemberPath="NameAR" Height="50"  materialDesign:HintAssist.Hint="Connect it with a Part" SelectionChanged="PivotNameCB_SelectionChanged" Grid.Column="1">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SelectedIndex, ElementName=RelationTabCB}" Value="2">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>

                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>
                        </ComboBox>

                        <ComboBox Name="SetNameCB" Padding="10"  DisplayMemberPath="Name" Height="50"  materialDesign:HintAssist.Hint="Add it to a Set" SelectionChanged="PivotNameCB_SelectionChanged" Grid.Column="1">
                            <ComboBox.Style>
                                <Style TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>

                                        <DataTrigger Binding="{Binding SelectedIndex, ElementName=RelationTabCB}" Value="3">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>

                                    </Style.Triggers>
                                </Style>
                            </ComboBox.Style>

                        </ComboBox>
                        <Button x:Name="AddToParents" HorizontalAlignment="Left" Style="{StaticResource OrangeButton}" Click="AddToParents_Click" Grid.Column="3" Width="50">
                            <icon:PackIconMaterial Kind="Plus"/>
                        </Button>
                    </Grid>


                    <ComboBox Name="PivotCategoryCB" Padding="10"  SelectionChanged="PivotCategoryCB_SelectionChanged" DisplayMemberPath="NameAR" Height="50" Width="380" Grid.Row="0" Grid.Column="1"  Style="{StaticResource MaterialDesignOutlinedComboBox}" materialDesign:HintAssist.Hint="Parent category" />
                    <ComboBox Name="PivotSectionCB" Padding="10"  Height="50" DisplayMemberPath="NameAR"  Width="380" Grid.Row="1" Grid.Column="1"  Style="{StaticResource MaterialDesignOutlinedComboBox}" materialDesign:HintAssist.Hint="Show section Pivot" />


                    <!--<ComboBox Name="PivotBrandCB" Height="50" DisplayMemberPath="Brand"  Width="380" Grid.Row="4" Grid.Column="1"  Style="{StaticResource MaterialDesignOutlinedComboBox}" materialDesign:HintAssist.Hint="Brands of category" />-->
                    <ComboBox x:Name="PivotBrandCB" Padding="10" Height="50"   Width="380" Grid.Row="2" Grid.Column="1"  Style="{StaticResource MaterialDesignOutlinedComboBox}" materialDesign:HintAssist.Hint="Brands of category" >
                        <ComboBox.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Margin="15 5" FontWeight="Bold" Text="{Binding Name}"/>
                                    </DataTemplate>
                                </GroupStyle.HeaderTemplate>
                            </GroupStyle>
                        </ComboBox.GroupStyle>
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Brand}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>




                    <TextBox Name="PivotPartTB" Height="50" Grid.Row="3" Grid.Column="1" Padding="14" Style="{StaticResource MaterialDesignOutlinedTextBox}" materialDesign:HintAssist.Hint="New part Name" Margin="5 0 5 0"/>
                    <TextBox Name="PivotPartARTB" Height="50" HorizontalAlignment="Center" Width="380" Grid.Row="4" Grid.Column="1" Padding="14" Style="{StaticResource MaterialDesignOutlinedTextBox}" materialDesign:HintAssist.Hint="New part Name Arabic"/>

                    <!--<TextBox  Name="pivotCostTB" Style="{StaticResource MaterialDesignOutlinedTextBox }" PreviewTextInput="NumericTextBox_PreviewTextInput" Height="50" Grid.Row="9" Grid.Column="1" Padding="14"  materialDesign:HintAssist.Hint="Cost" Margin="5 0 5 0"/>-->

                    <Grid  Grid.Row="9" Grid.Column="1" Height="50"  >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="90"/>
                        </Grid.ColumnDefinitions >
                        <TextBox Grid.Row="0" Grid.Column="0"  Name="pivotCostTB" Style="{StaticResource MaterialDesignOutlinedTextBox }" PreviewTextInput="NumericTextBox_PreviewTextInput" Height="50" HorizontalAlignment="Left" Width="290" Margin="5 0 0 0"  materialDesign:HintAssist.Hint="Cost" Padding="14"/>
                        <ComboBox Name="pivotCostCurrencyCB" Grid.Column="1"  Height="50"   Width="85" HorizontalAlignment="Right" Style="{StaticResource MaterialDesignOutlinedComboBox}" materialDesign:HintAssist.Hint="Curr" Margin="0 0 5 0" >
                            <ComboBoxItem Content="TL" />
                            <ComboBoxItem Content="EU" />
                            <ComboBoxItem Content="USD" />
                        </ComboBox>
                    </Grid>



                    <Grid  Grid.Row="5" Grid.Column="1" Height="50"  >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="90"/>
                        </Grid.ColumnDefinitions >
                        <TextBox Grid.Row="0" Grid.Column="0"  Name="pivotHegitTB" Style="{StaticResource MaterialDesignOutlinedTextBox }" PreviewTextInput="NumericTextBox_PreviewTextInput" Height="50" HorizontalAlignment="Left" Width="290" Margin="5 0 0 0"  materialDesign:HintAssist.Hint="Height" Padding="14"/>
                        <ComboBox Name="pivotHegitUnitCB" Grid.Column="1"   Height="50"   Width="85" HorizontalAlignment="Right" Style="{StaticResource MaterialDesignOutlinedComboBox}" materialDesign:HintAssist.Hint="Unit" Margin="0 0 5 0" >
                            <ComboBoxItem Content="Inch" />
                            <ComboBoxItem Content="m" />
                            <ComboBoxItem Content="cm" />
                            <ComboBoxItem Content="mm" />
                        </ComboBox>
                    </Grid>





                    <Grid  Grid.Row="6" Grid.Column="1" Height="50"  >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="90"/>
                        </Grid.ColumnDefinitions >
                        <TextBox Grid.Row="0" Grid.Column="0"  Name="pivotwidthTB" Style="{StaticResource MaterialDesignOutlinedTextBox }" PreviewTextInput="NumericTextBox_PreviewTextInput" Height="50" HorizontalAlignment="Left" Width="290" Margin="5 0 0 0"  materialDesign:HintAssist.Hint="Width" Padding="14"/>
                        <ComboBox Name="pivotWidthUnitCB" Grid.Column="1"   Height="50"   Width="85" HorizontalAlignment="Right" Style="{StaticResource MaterialDesignOutlinedComboBox}" materialDesign:HintAssist.Hint="Unit" Margin="0 0 5 0" >
                            <ComboBoxItem Content="Inch" />
                            <ComboBoxItem Content="m" />
                            <ComboBoxItem Content="cm" />
                            <ComboBoxItem Content="mm" />
                        </ComboBox>
                    </Grid>










                    <Grid  Grid.Row="7" Grid.Column="1" Height="50"  >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="90"/>
                        </Grid.ColumnDefinitions >
                        <TextBox Grid.Row="0" Grid.Column="0"  Name="pivotlenghtTB" Style="{StaticResource MaterialDesignOutlinedTextBox }" PreviewTextInput="NumericTextBox_PreviewTextInput" Height="50" HorizontalAlignment="Left" Width="290" Margin="5 0 0 0"  materialDesign:HintAssist.Hint="Length" Padding="14"/>
                        <ComboBox Name="pivotLengthUnitCB" Grid.Column="1"   Height="50"   Width="85" HorizontalAlignment="Right" Style="{StaticResource MaterialDesignOutlinedComboBox}" materialDesign:HintAssist.Hint="Unit" Margin="0 0 5 0" >
                            <ComboBoxItem Content="Inch" />
                            <ComboBoxItem Content="m" />
                            <ComboBoxItem Content="cm" />
                            <ComboBoxItem Content="mm" />
                        </ComboBox>
                    </Grid>








                    <Grid  Grid.Row="8" Grid.Column="1" Height="50"  >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="90"/>
                        </Grid.ColumnDefinitions >
                        <TextBox Grid.Row="0" Grid.Column="0"  Name="pivotWeightTB" Style="{StaticResource MaterialDesignOutlinedTextBox }" PreviewTextInput="NumericTextBox_PreviewTextInput" Height="50" HorizontalAlignment="Left" Width="290" Margin="5 0 0 0"  materialDesign:HintAssist.Hint="Weight" Padding="14"/>
                        <ComboBox Name="pivotWeightUnitCB" Grid.Column="1"  Height="50"   Width="85" HorizontalAlignment="Right" Style="{StaticResource MaterialDesignOutlinedComboBox}" materialDesign:HintAssist.Hint="Unit" Margin="0 0 5 0" >
                            <ComboBoxItem Content="g" />
                            <ComboBoxItem Content="kg" />
                        </ComboBox>
                    </Grid>


                    <TextBox  Name="pivotQTYTB"  PreviewTextInput="NumericTextBox_PreviewTextInput" Height="50" HorizontalAlignment="Center" Width="380" Style="{StaticResource MaterialDesignOutlinedTextBox}"   materialDesign:HintAssist.Hint="Quantity" Grid.Row="11" Grid.Column="1" Padding="14" />

                    <Button Content="Submit" Name="AddPivot_Button" Click="AddPivot_Button_Click" Style="{DynamicResource NewAdminPanelDeleteButton}" Width="225" Grid.Row="12" Grid.Column="1" Padding="14" />
                    <Button Content="Edit" Name="EditPivot_Button" Visibility="Collapsed" Click="EditPivot_Button_Click" Style="{DynamicResource NewAdminPanelDeleteButton}" Width="225" Grid.Row="12" Grid.Column="1" Padding="14" />
                    <Button Content="Cancel" Name="CancelAddPartBT" Visibility="Visible" Click="CancelAddPartBT_Click"  Style="{DynamicResource NewAdminPanelDeleteButton}" Width="225" Grid.Row="12" Grid.Column="0" Padding="14" />

                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsChecked,ElementName=PivotParts}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>

                    </Grid.Style>

                </Grid>

                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked,ElementName=PivotParts}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>

            <Border Grid.Column="1" Grid.Row="1" CornerRadius="19" Background="White" Margin="0 0 10 10">
                <Grid Name="PivotsGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Pivot Name" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Pivot Category" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <TextBox Name="PivotCategory" Style="{StaticResource MaterialDesignOutlinedTextBox }" Height="50" HorizontalAlignment="Center" Width="380" Grid.Row="0" Grid.Column="1" Padding="14"  materialDesign:HintAssist.Hint="Pivot Category"/>
                    <TextBox  Name="PivotName" Style="{StaticResource MaterialDesignOutlinedTextBox }" Height="50" HorizontalAlignment="Center" Width="380" Grid.Row="1" Grid.Column="1" Padding="14"  materialDesign:HintAssist.Hint="Pivot Name"/>
                    <Button Content="Add Pivot" Name="AddNewPivotBT" Click="AddNewPivotBT_Click"  Style="{DynamicResource NewAdminPanelDeleteButton}" Width="450" Grid.Row="9" Grid.ColumnSpan="2"  Padding="14" />

                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsChecked,ElementName=Pivots}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                </Grid>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked,ElementName=Pivots}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>

            <Border Visibility="Hidden" Grid.Column="1" Grid.Row="1" CornerRadius="19" Background="White" Margin="0 0 10 10">
                <Grid Name="SprinklerGrid">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Sprinkler Category" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Sprinkler Part Name" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Cost" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Height" Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Width" Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Length" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBlock Text="Weight" Grid.Row="6" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <TextBox  Name="SprinklerCategoryCB" Style="{StaticResource MaterialDesignOutlinedTextBox }" Height="50" HorizontalAlignment="Center" Width="380" Grid.Row="0" Grid.Column="1" Padding="14"  materialDesign:HintAssist.Hint="Sprinkler Category"/>
                    <TextBox Name="SprinklerPartTB" Height="50" HorizontalAlignment="Center" Width="380" Grid.Row="1" Grid.Column="1" Padding="14" Style="{StaticResource MaterialDesignOutlinedTextBox}" materialDesign:HintAssist.Hint="Part Name"/>
                    <TextBox  Name="SprinklerCostTB" Style="{StaticResource MaterialDesignOutlinedTextBox }" PreviewTextInput="NumericTextBox_PreviewTextInput" Height="50" HorizontalAlignment="Center" Width="380" Grid.Row="2" Grid.Column="1" Padding="14"  materialDesign:HintAssist.Hint="Cost"/>
                    <TextBox  Name="SprinklerHeightTB" Style="{StaticResource MaterialDesignOutlinedTextBox }" PreviewTextInput="NumericTextBox_PreviewTextInput" Height="50" HorizontalAlignment="Center" Width="380"   materialDesign:HintAssist.Hint="Height" Grid.Row="3" Grid.Column="1" Padding="14"/>
                    <TextBox  Name="SprinklerwidthTB" Style="{StaticResource MaterialDesignOutlinedTextBox }" PreviewTextInput="NumericTextBox_PreviewTextInput" Height="50" HorizontalAlignment="Center" Width="380"   materialDesign:HintAssist.Hint="Width" Grid.Row="4" Grid.Column="1" Padding="14"/>
                    <TextBox  Name="SprinklerlengthTB" Style="{StaticResource MaterialDesignOutlinedTextBox }" PreviewTextInput="NumericTextBox_PreviewTextInput" Height="50" HorizontalAlignment="Center" Width="380"   materialDesign:HintAssist.Hint="Length" Grid.Row="5" Grid.Column="1" Padding="14"/>
                    <TextBox  Name="SprinklerWeightTB" Style="{StaticResource MaterialDesignOutlinedTextBox }" PreviewTextInput="NumericTextBox_PreviewTextInput" Height="50" HorizontalAlignment="Center" Width="380"   materialDesign:HintAssist.Hint="Weight" Grid.Row="6" Grid.Column="1" Padding="14"/>
                    <Button Content="Add Sprinkler" Name="AddSpinkler_Button" Click="AddSpinkler_Button_Click" Style="{DynamicResource NewAdminPanelDeleteButton}" Width="450" Grid.Row="7" Grid.ColumnSpan="2"  Padding="14" />

                    <Grid.Style>
                        <Style TargetType="Grid">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsChecked,ElementName=SpinklersParts}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Grid.Style>
                </Grid>
