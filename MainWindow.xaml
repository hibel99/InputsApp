                                    <CheckBox HorizontalAlignment="Right" Checked="UsersFilterSelectAll_Checked" Unchecked="UsersFilterSelectAll_Unchecked" Margin="0 0 40 0" Name="UsersFilterSelectAll" Style="{StaticResource MaterialDesignActionLightCheckBox}">
                                        <icon:PackIconMaterial Kind="CheckboxMarkedOutline"/>
                                    </CheckBox>
                                    <Separator VerticalAlignment="Bottom" BorderBrush="#FD8207"  Foreground="#FD8207" Margin="25 0"/>

                                    <ItemsControl x:Name="CategoriesFilterIC"  Grid.Row="1" Margin="25 0" VerticalAlignment="Center"  d:ItemsSource="{d:SampleData ItemCount=5}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox Content="{Binding NameAR}" Margin="10" IsChecked="{Binding IsSelect,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineCheckBox}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl >

                                    <TextBlock Text="Sections" Style="{StaticResource CardsText}" Grid.Row="2" HorizontalAlignment="Left" Margin="25 0 0 0"/>
                                    <CheckBox HorizontalAlignment="Right" Checked="UsersFilterTitleSelectAll_Checked" Unchecked="UsersFilterTitleSelectAll_Unchecked" Grid.Row="2" Margin="0 0 40 0" Name="UsersFilterTitleSelectAll" Style="{StaticResource MaterialDesignActionLightCheckBox}">
                                        <icon:PackIconMaterial Kind="CheckboxMarkedOutline"/>
                                    </CheckBox>
                                    <Separator VerticalAlignment="Bottom"  BorderBrush="#FD8207" Foreground="#FD8207" Margin="25 0"  Grid.Row="2"/>

                                    <ItemsControl x:Name="SectionsFilterIC" Grid.Row="3" Margin="25 0" VerticalAlignment="Center"  d:ItemsSource="{d:SampleData ItemCount=5}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox Content="{Binding NameAR}" Margin="10" IsChecked="{Binding IsSelect,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineCheckBox}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl >


                                    <TextBlock Text="Brand" Style="{StaticResource CardsText}" Grid.Row="4" HorizontalAlignment="Left" Margin="25 0 0 0"/>
                                    <CheckBox HorizontalAlignment="Right" Checked="checkAllbrands_Checked" Unchecked="checkAllbrands_Unchecked" Grid.Row="4" Margin="0 0 40 0" Name="checkAllbrands" Style="{StaticResource MaterialDesignActionLightCheckBox}">
                                        <icon:PackIconMaterial Kind="CheckboxMarkedOutline"/>
                                    </CheckBox>
                                    <Separator VerticalAlignment="Bottom" BorderBrush="#FD8207" Foreground="#FD8207" Margin="25 0"  Grid.Row="4"/>

                                    <ItemsControl x:Name="BrandsFilterIC" Grid.Row="5" Margin="25 0" VerticalAlignment="Center"  d:ItemsSource="{d:SampleData ItemCount=5}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox Content="{Binding Brand}" Margin="10" IsChecked="{Binding IsSelect,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource MaterialDesignFilterChipPrimaryOutlineCheckBox}"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl >


                                    <Button x:Name="ApplyFilters" Grid.Row="6" Content="Apply" HorizontalAlignment="Right" Margin="0 0 25 0" Style="{StaticResource OrangeButton}" Click="ApplyFilters_Click"/>


                                </Grid>
                            </ScrollViewer>

                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsChecked,ElementName=OpenFilter}" Value="True">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                        </Border>

                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsChecked,ElementName=OpenFilter}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                    </Grid>

                </Grid>
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="Visibility" Value="Collapsed"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsChecked,ElementName=ALLSparesRD}" Value="True">
                                <Setter Property="Visibility" Value="Visible"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>



        </Grid>
    </Grid>
</Window>
