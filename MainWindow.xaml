                    <TextBox  Name="SprinklerWeightTB" Style="{StaticResource MaterialDesignOutlinedTextBox }" PreviewTextInput="NumericTextBox_PreviewTextInput" Height="50" HorizontalAlignment="Center" Width="380"   materialDesign:HintAssist.Hint="Weight" materialDesign:HintAssist.Foreground="#FD8207" Grid.Row="7" Grid.Column="1" Padding="14"/>
