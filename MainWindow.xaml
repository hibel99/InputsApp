                    <DatePicker Name="pivotDatePicker" Width="380" Height="50" Grid.Row="8" Grid.Column="1" Padding="14"/>
                    <Button Content="Add Pivot" Name="AddPivot_Button" Click="AddPivot_Button_Click" Style="{DynamicResource NewAdminPanelDeleteButton}" Width="450" Grid.Row="9" Grid.ColumnSpan="2" Padding="14" />

